import connection from "../connections";
import { Album } from "./typeAlbuns";

const searchAlbumsByName = async (id: number): Promise<Album[]> => {
  return await connection("albuns").where("namealbum", "like", `%${name}%`);
};

const getAlbums = async () => {
  return await connection("ALBUNS");
};

module.exports = {
  getAlbums,
  searchAlbumsByName,
};
